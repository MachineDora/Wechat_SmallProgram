/**index.wxss**/
.container{
  position: fixed;
  height: 100%;
  width: 100%;
}

.no{
  margin-top:20px;
}

.nothing{
  margin-top: 0px;
  width: 100%;

}

.content_list{
  top:10%;
  position: absolute;
  width: 90%;
}

.btn{
  padding:0.15cm 0.4cm 0cm 0.8cm;
  text-align: left;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  margin-top:0px;
  font-size: 20rpx;
  background-color:rgb(255, 255, 255);
  color: rgb(161, 161, 161);
  opacity: 0.8;
}

.a{
  width: 30px;
  height: 30px;
}

.circle1{
  line-height: 150rpx;
  display: flex;
  align-items: center;/** 垂直居中*/
  justify-content: center; /** flex 属性， 水平居中**/
  height: 50px;
  width: 50px;
  position: fixed;
  top: 80%;
  left:80%;
  border-radius: 50%;
  background-color:rgb(255, 193, 22);
}

.circle3{
  line-height: 150rpx;
  display: flex;
  align-items: center;/** 垂直居中*/
  justify-content: center; /** flex 属性， 水平居中**/
  height: 50px;
  width: 50px;
  position: fixed;
  top: 80%;
  left:60%;
  border-radius: 50%;
  background-color:rgb(255, 193, 22);
}

.page_row{  
  z-index: 2;
  width: 90%;
  height: 6%;
  top: 2%;
  position: fixed;
  }  

.back{
  width: 100%;
  height: 100%;
  position: absolute;
  border: 1px solid #ffffff00;  
  border-radius: 10rpx;  
  background-color:rgba(46, 46, 46, 0.233);
}

.search{
  display: flex;  
  flex-direction: row;
  left: 15%;
  top:10%;
  height: 80%;
  width: 60%;
  position: absolute;
}  
.search_arr { 
  top: 50%;
  font-size: 100%;
  display: flex;  
  flex-direction: row; 
  background-color:rgb(255, 255, 255);
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
}  
.search_arr input{
  border-radius: 5px;    
}        
.sousuo {  
  top:10%;
  height: 80%;
